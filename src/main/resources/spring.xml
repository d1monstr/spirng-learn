<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="client" class="examples.first.core.beans.Client">
        <constructor-arg type="java.lang.Integer" value="1"/>
        <constructor-arg type="java.lang.String" value="John Smith"/>
    </bean>

    <bean id="eventLogger" class="examples.first.core.loggers.ConsoleEventLogger"/>

<!--    <bean id="fileEventLogger" class="examples.first.core.loggers.FileEventLogger" init-method="init">-->
<!--        <constructor-arg type="java.lang.String" value="путь до файла"/>-->
<!--    </bean>-->

    <bean id="app" class="examples.first.core.App">
        <constructor-arg ref = "client"/>
        <constructor-arg ref = "eventLogger"/>
    </bean>

    <bean id="event" class="examples.first.core.beans.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg ref = "dateFormat"/>
    </bean>

    <bean id = "dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>

</beans>